<!-- Displays current components list.
     Assumes CurrentSolution_ViewModel as DataContext -->
<UserControl x:Class="ElectrolessCalculator.View.CurrentSolutionPresenter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ElectrolessCalculator.View"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="220">
    <StackPanel Orientation="Vertical">
        <local:CurrentComponentPresenter DataContext="{Binding Components[0]}"/>
        <local:CurrentComponentPresenter DataContext="{Binding Components[1]}"/>
        <local:CurrentComponentPresenter DataContext="{Binding Components[2]}"/>
        <local:CurrentComponentPresenter DataContext="{Binding Components[3]}"/>
        <local:CurrentComponentPresenter DataContext="{Binding Components[4]}"/>
    </StackPanel>
</UserControl>
